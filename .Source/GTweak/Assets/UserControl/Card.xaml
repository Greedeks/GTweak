<UserControl x:Class="GTweak.Assets.UserControl.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GTweak.Assets.UserControl"
             mc:Ignorable="d" 
             d:Height="auto" d:Width="auto" SnapsToDevicePixels="True" UseLayoutRounding="True">
    <Border CornerRadius="10" Height="230" Width="230" Background="{StaticResource Color_Background_Dark}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" >
                <Image x:Name="CardImage" Margin="0,15,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="60" Stretch="Uniform" Source="{Binding IconSource, RelativeSource={RelativeSource AncestorType=local:Card}}"/>
                <TextBlock x:Name="CardTitle" Style="{StaticResource Text}" Margin="0,5,0,0" FontSize="11pt" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center"  TextAlignment="Center" Text="Title"/>
                <TextBlock x:Name="CardText" Style="{StaticResource Text}" Foreground="{StaticResource Color_TetBlock_Inactivity}" Margin="0,10,0,0" FontSize="11pt" Width="218" Height="70" HorizontalAlignment="Center" TextAlignment="Center" Text="Text"/>
            </StackPanel>

            <Button x:Name="CardButton" Grid.Row="1" Content="Content" Style="{StaticResource BtnDefault}" 
                   Width="150" Height="30" Margin="0,0,0,15" HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" Cursor="Hand" 
                   PreviewMouseLeftButtonUp="CardButton_PreviewMouseLeftButtonUp"/>
        </Grid>
    </Border>
</UserControl>