<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008">

    <Style x:Key="BordersRectangle" TargetType="{x:Type Rectangle}">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="RadiusX" Value="7"/>
        <Setter Property="RadiusY" Value="7"/>
        <Setter Property="StrokeThickness" Value="0.4"/>
        <Setter Property="Panel.ZIndex" Value="1"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Stroke">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Color="{StaticResource Color_Border_Gradient_1}" Offset="0"/>
                    <GradientStop Color="{StaticResource Color_Border_Gradient_2}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
