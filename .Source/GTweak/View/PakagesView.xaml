                        <ToggleButton x:Name="TuneInRadio" IsChecked="{Binding [TuneInRadio].Installed}" IsEnabled="{Binding [TuneInRadio].IsUnavailable}" ToolTip="{DynamicResource TuneInRadio_pkg}" Style="{StaticResource TglPackages}" Tag="{StaticResource Img_TuneInRadio}"/>
