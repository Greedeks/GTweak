            <Grid Grid.Row="2">
                <uc:DescriptionBlock VerticalAlignment="Stretch" x:Name="DescBlock" DefaultText="{DynamicResource defaultDescriptionApp}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
