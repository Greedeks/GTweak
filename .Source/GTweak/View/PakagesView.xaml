                        <ToggleButton x:Name="Hulu" IsChecked="{Binding [Hulu].Installed}" IsEnabled="{Binding [Hulu].IsUnavailable}" ToolTip="{DynamicResource Hulu_pkg}" Style="{StaticResource TglPackages}" Tag="{StaticResource Img_Hulu}"/>
                        <ToggleButton x:Name="Disney" IsChecked="{Binding [Disney].Installed}" IsEnabled="{Binding [Disney].IsUnavailable}" ToolTip="{DynamicResource Disney_pkg}" Style="{StaticResource TglPackages}" Tag="{StaticResource Img_Disney}"/>
                        <ToggleButton x:Name="Instagram" IsChecked="{Binding [Instagram].Installed}" IsEnabled="{Binding [Instagram].IsUnavailable}" ToolTip="{DynamicResource Instagram_pkg}" Style="{StaticResource TglPackages}" Tag="{StaticResource Img_Instagram}"/>
                        <ToggleButton x:Name="Twitter" IsChecked="{Binding [TwitterX].Installed}" IsEnabled="{Binding [TwitterX].IsUnavailable}" ToolTip="{DynamicResource TwitterX_pkg}" Style="{StaticResource TglPackages}" Tag="{StaticResource Img_TwitterX}"/>
                        <ToggleButton x:Name="TikTok" IsChecked="{Binding [TikTok].Installed}" IsEnabled="{Binding [TikTok].IsUnavailable}" ToolTip="{DynamicResource TikTok_pkg}" Style="{StaticResource TglPackages}" Tag="{StaticResource Img_TikTok}"/>
                        <ToggleButton x:Name="Netflix" IsChecked="{Binding [Netflix].Installed}" IsEnabled="{Binding [Netflix].IsUnavailable}" ToolTip="{DynamicResource Netflix_pkg}" Style="{StaticResource TglPackages}" Tag="{StaticResource Img_Netflix}"/>
                        <ToggleButton x:Name="Viber" IsChecked="{Binding [Viber].Installed}" IsEnabled="{Binding [Viber].IsUnavailable}" ToolTip="{DynamicResource Viber_pkg}" Style="{StaticResource TglPackages}" Tag="{StaticResource Img_Viber}"/>
                        <ToggleButton x:Name="Picsart" IsChecked="{Binding [Picsart].Installed}" IsEnabled="{Binding [Picsart].IsUnavailable}" ToolTip="{DynamicResource Picsart_pkg}" Style="{StaticResource TglPackages}" Tag="{StaticResource Img_Picsart}"/>
