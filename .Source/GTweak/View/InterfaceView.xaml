<UserControl x:Class="GTweak.View.InterfaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GTweak.View"
             xmlns:vm="clr-namespace:GTweak.Core.ViewModel"
             xmlns:uc="clr-namespace:GTweak.Assets.UserControl"
             mc:Ignorable="d" d:DesignHeight="550" d:DesignWidth="1100"
             Style="{StaticResource LaunchPage}">
    <UserControl.DataContext>
        <vm:InterfaceVM/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Margin="0,10,0,0" Style="{StaticResource ScrollPage}">
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Width="Auto" Height="Auto">

                        <uc:ToggleButton x:Name="TglButton1" StateNA="{Binding [TglButton1].State}" Height="25" Width="Auto" Margin="20,15,0,0" TextResource="{DynamicResource tgl1_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton2" StateNA="{Binding [TglButton2].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl2_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton3" StateNA="{Binding [TglButton3].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl3_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton4" StateNA="{Binding [TglButton4].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl4_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton5" StateNA="{Binding [TglButton5].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl5_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton6" StateNA="{Binding [TglButton6].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl6_interface}" IsEnabled="{Binding IsBlockWithoutLicense}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton7" StateNA="{Binding [TglButton7].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl7_interface}" IsEnabled="{Binding IsBlockWithoutLicense}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton8" StateNA="{Binding [TglButton8].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl8_interface}" IsEnabled="{Binding IsBlockWithoutLicense}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton9" StateNA="{Binding [TglButton9].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl9_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton10" StateNA="{Binding [TglButton10].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl10_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton11" StateNA="{Binding [TglButton11].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl11_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton12" StateNA="{Binding [TglButton12].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl12_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton13" StateNA="{Binding [TglButton13].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl13_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton14" StateNA="{Binding [TglButton14].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl14_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton30" StateNA="{Binding [TglButton30].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl30_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton32" StateNA="{Binding [TglButton32].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl32_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Width="Auto" Height="Auto">

                        <uc:ToggleButton x:Name="TglButton15" StateNA="{Binding [TglButton15].State}" Height="25" Width="Auto" Margin="20,15,0,0" TextResource="{DynamicResource tgl15_interface}" IsEnabled="{Binding IsBlockForWin10}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton16" StateNA="{Binding [TglButton16].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl16_interface}" IsEnabled="{Binding IsBlockForWin10}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton17" StateNA="{Binding [TglButton17].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl17_interface}" IsEnabled="{Binding IsBlockForWin10}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton18" StateNA="{Binding [TglButton18].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl18_interface}" IsEnabled="{Binding IsBlockForWin10}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton19" StateNA="{Binding [TglButton19].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl19_interface}" IsEnabled="{Binding IsBlockForWin10}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton20" StateNA="{Binding [TglButton20].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl20_interface}" IsEnabled="{Binding IsBlockForWin10}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton21" StateNA="{Binding [TglButton21].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl21_interface}" IsEnabled="{Binding IsBlockForWin10}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton22" StateNA="{Binding [TglButton22].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl22_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton23" StateNA="{Binding [TglButton23].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl23_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton24" StateNA="{Binding [TglButton24].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl24_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton25" StateNA="{Binding [TglButton25].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl25_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton26" StateNA="{Binding [TglButton26].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl26_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton27" StateNA="{Binding [TglButton27].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl27_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton28" StateNA="{Binding [TglButton28].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl28_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton29" StateNA="{Binding [TglButton29].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl29_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton31" StateNA="{Binding [TglButton31].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl31_interface}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="95"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <uc:Comment x:Name="CommentTweak" DefaultText="{DynamicResource defaultDescription}"/>
                <TextBlock x:Name="TextViewColor" Style="{StaticResource Description}" Text="{DynamicResource textcolor_interface}" VerticalAlignment="Top" Foreground="#505050" Visibility="Hidden" Margin="0,28,0,0"/>
                <StackPanel x:Name="PreviewFlick" Orientation="Horizontal" VerticalAlignment="Top"  Margin="0,28,0,0" HorizontalAlignment="Center" Visibility="Hidden">
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Style.Triggers>
                                <Trigger Property="Visibility" Value="Visible">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard Timeline.DesiredFrameRate="240">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Border Background="{StaticResource Color_Highlighted}" Height="20" Width="1.2" Margin="0,0,10,0">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <Trigger Property="Visibility" Value="Visible">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard Timeline.DesiredFrameRate="240">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" RepeatBehavior="Forever" AutoReverse="True" Duration="0:0:0.530" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                    <TextBlock Style="{StaticResource Description}" Foreground="{StaticResource Color_TetBlock_Inactivity}" Text="{DynamicResource previewflick_interface}"/>
                    <Border Background="{StaticResource Color_Highlighted}" Height="20" Width="1.2" Margin="10,0,0,0">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <Trigger Property="Visibility" Value="Visible">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard Timeline.DesiredFrameRate="240">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" RepeatBehavior="Forever" AutoReverse="True" Duration="0:0:0.200"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
