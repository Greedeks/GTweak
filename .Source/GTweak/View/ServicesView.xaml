                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Width="Auto" Height="Auto">
                        <uc:ToggleButton x:Name="TglButton15" StateNA="{Binding [TglButton15].State}" Height="25" Width="Auto" Margin="20,15,0,0" TextResource="{DynamicResource tgl15_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState" />
                        <uc:ToggleButton x:Name="TglButton16" StateNA="{Binding [TglButton16].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl16_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
