                        <uc:ToggleButton x:Name="TglButton18" StateNA="{Binding [TglButton18].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl18_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton19" StateNA="{Binding [TglButton19].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl19_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton20" StateNA="{Binding [TglButton20].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl20_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton21" StateNA="{Binding [TglButton21].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl21_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton22" StateNA="{Binding [TglButton22].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl22_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton23" StateNA="{Binding [TglButton23].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl23_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton24" StateNA="{Binding [TglButton24].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl24_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                        <uc:ToggleButton x:Name="TglButton25" StateNA="{Binding [TglButton25].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl25_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
