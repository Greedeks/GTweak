                        <uc:ToggleButton x:Name="TglButton28" StateNA="{Binding [TglButton28].State}" Height="25" Width="Auto" Margin="20,20,0,0" TextResource="{DynamicResource tgl28_services}" MouseEnter="Tweak_MouseEnter" MouseLeave="Tweak_MouseLeave" ChangedState="TglButton_ChangedState"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>


        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="95"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <uc:Comment x:Name="CommentTweak" DefaultText="{DynamicResource defaultDescription}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
